.taskBlock
  display flex
  align-items center
  justify-content center
  flex-direction column

.tasklist
  width 100%
  min-height gutter(5)
  border solid 1px #999999
  border-radius 1u
  padding 1u
  flex-direction row
  margin-bottom 1u
  justify-content space-between 
  align-items center
  &:hover
    background #eee


.taskButtons
  flex-direction row

.taskHeader
  font-size 16px

.taskHeaderClose
  font-size 16px
  color #999


.btn 
  border-radius 1u

.editBtn, .closeBtn, .openBtn, .saveBtn
  padding 0.2u 1u
  margin 0 1u 0 0

.editBtn
  background #00ff00

.closeBtn
  background orange

.openBtn
  background #ddd

.saveBtn
  background  #4fc3f7   

.deleteBtn
  background #ff0000
  padding 0.2u 1u


.filter 
  justify-content center
  flex-direction row
  margin 2u

.filterText 
    margin 1u

.field
  background  #fff  
  border-radius 1u
  padding 1u 1u
  font-size: 16px
